= simple_form_for resource do |f|
  = f.input :rule, as: :select, collection: Game.rules.keys.to_a
  %center.h3 Teams
  #teams.row
    = f.simple_fields_for :t_one, resource.t_one do |team_form|
      .col-sm.card.m-3= render 'team_fields', f: team_form
    = f.simple_fields_for :t_two, resource.t_two do |team_form|
      .col-sm.card.m-3= render 'team_fields', f: team_form
  %center.h3 Score
  #score.row
    .col-sm.card.m-3
      .card-body= f.input :t_one_score
    .col-sm.card.m-3
      .card-body= f.input :t_two_score
  = f.submit
