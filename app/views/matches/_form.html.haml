= simple_form_for resource do |f|
  = f.input :rule, as: :select, collection: Match.rules.keys.to_a
  = f.input :games_rule, as: :select, collection: Game.rules.keys.to_a
  %center.h3 Teams
  #teams.row
    = f.simple_fields_for :team_teamables do |tt_form|
      .card-body
        = tt_form.simple_fields_for :team do |team_form|
          = render 'team_fields', f: team_form
  = f.submit
